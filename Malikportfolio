function openChat() {
    alert("Hello! I'm here to help. What brings you to [Your Name] Design Studio today?");
    const response = prompt("Are you looking for a specific type of design? (e.g., portraits, invitations)");
    if (response) {
        alert(`Great! You mentioned ${response}. Let me show you some examples.`);
    } else {
        alert("Feel free to explore the site or contact us for more details!");
    }
}
